<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:textColor">#ba000000</item>-->
        <!--        <item name="android:itemBackground">#392f31</item>-->
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="boxCollapsedPaddingTop">4dp</item>
        <item name="android:textColorHint">#4affffff</item>
    </style>
    <style name="TextEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">#baffffff</item>
        <item name="android:textColorHighlight">@color/design_default_color_primary</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="nanum_brush" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_brush</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="nanum_pen" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_pen</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="noto_regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="noto_bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="noto_medium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="noto_lite" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/noto_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>