<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caffffff"
    tools:context=".MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/top_background"
        android:gravity="center"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contextClickable="false"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mypage_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone">

            <ProgressBar
                android:id="@+id/mypage_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="#F7CF46" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/mypage_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/page_border"
            android:elevation="80dp"
            android:visibility="visible"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="40dp"
                android:paddingEnd="20dp"
                android:paddingBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="20dp">

                        <TextView
                            android:id="@+id/mypage_user_nickname"
                            style="@style/noto_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ba000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/mypage_user_message"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="#9a000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profile_update_btn"
                        style="@style/noto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="4dp"
                        android:text="프로필 수정"
                        android:textColor="#4179d1" />
                </LinearLayout>

                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#44CDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mypage_user_mbti"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#ba000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView12"
                            style="@style/noto_lite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="MBTI"
                            android:textColor="#9a000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view11"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:background="#44CDCDCD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mypage_user_board_count"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#ba000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView13"
                            style="@style/noto_lite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Posts Count"
                            android:textColor="#9a000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44CDCDCD" />

                <TextView
                    android:id="@+id/textView17"
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="16dp"
                    android:text="HISTORY"
                    android:textColor="#ba000000" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mypage_history_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/gray_border"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="20dp"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent">

                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        card_view:layout_constraintBottom_toTopOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent">

                        <ProgressBar
                            android:id="@+id/mypage_history_loading_progress"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:indeterminateTint="#F7CF46"
                            android:visibility="gone"
                            tools:visibility="gone" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/gray_border"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingEnd="15dp">

                    <ProgressBar
                        android:id="@+id/mypage_push_progress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:indeterminateTint="#F7CF46"
                        android:visibility="gone"
                        tools:visibility="gone" />

                    <Switch
                        android:id="@+id/mypage_push_setting"
                        style="@style/noto_regular"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="푸시 알림 설정"
                        android:textColor="#777777"
                        android:textSize="14sp"
                        android:thumb="@drawable/switch_thumb_selector"
                        android:track="@drawable/switch_track_selector" />
                </LinearLayout>

                <Button
                    android:id="@+id/mypage_logout_btn"
                    style="@style/noto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="60dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:text="로그아웃"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view39"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/textView18"
                    style="@style/noto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="16dp"
                    android:text="How do you feel today?"
                    android:textColor="#ba000000"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/select_feel_very_good"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_left_click_effect"
                            android:backgroundTint="#C73279"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="매우 좋음"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view20"
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/select_feel_good"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="좋음"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view21"
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/select_feel_so"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="보통"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view17"
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/select_feel_bad"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="나쁨"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view22"
                            android:layout_width="1dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/select_feel_very_bad"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_right_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="매우 나쁨"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>