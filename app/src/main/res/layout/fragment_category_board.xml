                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_right_click_effect"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="ENFJ"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <EditText
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Search"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp" />

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/noto_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginStart="4dp"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/qna_select_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/white_top_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/qna_top_background"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/qna_select_free"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_left_click_effect"
                            android:backgroundTint="#C73279"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="자유"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view15"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/qna_select_question"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="질문"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view29"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/qna_select_hobby"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="취미"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view30"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/qna_select_job"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="직업"
                            android:textSize="14sp" />

