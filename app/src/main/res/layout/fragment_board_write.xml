<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/write_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caffffff"
    android:clickable="true"
    tools:context=".BoardWriteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/top_background"
            android:gravity="center"
            android:orientation="vertical" >

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/page_border"
            android:clickable="false">

            <LinearLayout
                android:id="@+id/write_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_top_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/qna_top_background"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/write_select_daily"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_left_click_effect"
                            android:backgroundTint="#C73279"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="일상"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view15"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/write_select_free"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="자유"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view35"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/write_select_question"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="질문"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view29"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/write_select_hobby"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="취미"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view30"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/write_select_job"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="직업"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view31"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#77ffffff" />

                        <TextView
                            android:id="@+id/write_select_support"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/top_right_click_effect"
                            android:backgroundTint="#000000"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="응원"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_mbti"
                    style="@style/noto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textColor="#ba000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/write_border"
                    android:elevation="30dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="30dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="제목"
                        android:textColorHint="#66000000"
                        app:boxCollapsedPaddingTop="4dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/write_title_input"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="bottom"
                            android:inputType="text"
                            android:textColor="#ba000000"
                            android:textColorHighlight="#3C1969"
                            android:textCursorDrawable="@drawable/input_cursor"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/noto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="내용"
                        android:textColorHint="#66000000"
                        app:boxCollapsedPaddingTop="4dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/write_content_input"
                            style="@style/noto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@android:color/transparent"
                            android:textColor="#ba000000"
                            android:textColorHighlight="#3C1969"
                            android:textCursorDrawable="@drawable/input_cursor"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/write_submit_btn"
                    style="@style/noto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="60dp"
                    android:backgroundTint="#4179d1"
                    android:text="작성완료"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/write_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contextClickable="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="gone">

            <ProgressBar
                android:id="@+id/write_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="#F7CF46" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>